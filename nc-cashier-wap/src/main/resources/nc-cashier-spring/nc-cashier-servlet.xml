    <!-- 完成请求和注解POJO的映射 -->
    <mvc:resources mapping="/static/**" location="/static/"/>
    <!-- 视图解释类 -->
    <!--<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">-->
    <!--<property name="prefix" value="/WEB-INF/views/"/>-->
    <!--<property name="suffix" value=".jsp"/>-->
    <!--</bean>-->
    <!-- velocity解析器,替换掉原来的jsp -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.velocity.VelocityViewResolver">
        <property name="contentType" value="text/html;charset=UTF-8"/>
        <property name="suffix" value=".vm"/>
        <property name="requestContextAttribute" value="ctx"/>
    </bean>

    <bean id="velocityConfigurer" class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
        <property name="resourceLoaderPath">
            <value>WEB-INF/views/</value>
        </property>
        <property name="velocityProperties">
            <props>
                <prop key="input.encoding">UTF-8</prop>
                <prop key="output.encoding">UTF-8</prop>
                <prop key="contentType">text/html;charset=UTF-8</prop>
            </props>
        </property>
    </bean>
    <import resource="classpath:/nc-cashier-spring/nc-cashier-datasource.xml"/>
    <import resource="classpath:/nc-cashier-spring/nc-cashier-spring-aop.xml"/>

</beans>